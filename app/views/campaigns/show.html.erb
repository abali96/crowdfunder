<section>
  <div class="campaign_title"> <%= @campaign.name %>
  </div>
  <div class="campaign_user"> Created by: <%= @campaign.user.email %>
  </div>

  <div class="row campaign">
    <div class="campaign_pic large-8 columns">
      Insert Picture
    </div>
    <div class="large-8 columns new_comment_form">
      <%= form_for [@campaign, @comment] do |f| %>
        <div class="large-10 columns">
          <%= f.label :body, "Comment" %>
          <%= f.text_field :body %>
        </div>
       <% end %>
    </div>

    <div class="large-8 columns all_comments">
      <%= render 'comments' %>
    </div>
    <div class="large-4 columns campaign_info">

      <div id="sidebar">
        <%= render 'sidebar' %>
      </div>
    </div>
  </div>
</section>