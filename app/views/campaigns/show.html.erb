<% total = 0 %>
<% @campaign.rewards.each do |r| %>
  <% total += (r.amount * r.pledges.count) %>
<% end %>

<section >
  <div class="campaign_title"> <%= @campaign.name %>
  </div>
  <div class="campaign_user"> Created by: <%= @campaign.user.email %>
  </div>

  <div class="row campaign">
    <div class="campaign_pic large-8 columns">
      Insert Picture
    </div>
    <div class="large-4 columns campaign_info"> 
      <span class="campaign_header" id = "total_earned">
        $<%= total %>
      </span>
      <p>pledged of $<%= @campaign.goal %> goal.</p>
        
      <% if @campaign.end_date < Time.now %>
        <p>Campaign over!</p>
      <% else %>
        <span class="campaign_header">
          <%= (@campaign.end_date - Date.today).round %>
        </span>
        <p> days to go</p>
      <% end %>

      <p style="font-size: .8rem;">Category: <%= link_to @campaign.category, campaign_path %></p>
      <p style="font-size: .8rem;">Campaign was created by <%= @campaign.user.email %></p>
      <p style="font-size: .8rem;">Campaign will only be funded if goal is reached by: <%= @campaign.end_date %></p>

      <div id="rewards">
        <%= render 'rewards' %>
      </div>
    </div>  
  </div>
</section>
