<h1>Campaigns that have been funded</h1>
  <% if @funded_array.count > 0 %>
    <% @funded_array.each do |f| %>
      <h3><%= link_to f.name, campaign_path(f) %></h3>
      <p>Initial goal: <%= f.goal %></p>
      <p>Funds raised: <%= f.total_earned %></p>
    <% end %>
  <% else %>
    <p>No campaign has been funded yet!</p>
<% end %>

<h1>Campaigns with the most backers</h1>
<% @backed.each do |b| %>
  <h3><%= link_to b.name, campaign_path(b) %></h3>
  <p><%= b.number_of_backers %> backers</p>
  <br>
<% end %>